# Helper plugin to delete resources

source "$SOWLIB/pluginutils"

set -eo pipefail

getRequiredValue seconds "seconds" PLUGINCONFIGJSON
getValue step "step" PLUGINCONFIGJSON

case "$1" in
    deploy) ;&
    delete)
        if [[ -z ${step:-""} ]] || [[ "$step" == "$1" ]]; then
            exec_cmd sleep $seconds
        else
            verbose "Nothing to do on $1."
        fi
        ;;
    *) fail "unsupported action $1"
esac
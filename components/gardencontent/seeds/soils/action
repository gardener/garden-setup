source "$SOWLIB/k8s"

delete_controllerinstallations_belonging_to_seed() {
  if [[ ${1:-""} != "delete" ]]; then
    return
  fi
  PLUGIN_setup delete_controllerinstallations_belonging_to_seed
  K8S_setKubeConfig "$PLUGININSTANCE"
  getRequiredValue seed "seed" PLUGINCONFIGJSON

  exec_cmd kubectl delete --ignore-not-found controllerinstallation $(kubectl get controllerinstallation -o json | jq -r '.items[] | select(.spec.seedRef.name == "'$seed'") | .metadata.name')
}

cleanup()
{
  if [ "$1" = "delete" ]; then
    PLUGIN_setup cleanup
    getRequiredValue namespace "namespace" PLUGINCONFIGJSON
    K8S_setKubeConfig "$PLUGININSTANCE" 
    kubectl -n $namespace delete --ignore-not-found \
      deployment/gardener-external-admission-controller \
      statefulset/alertmanager \
      statefulset/prometheus \
      service/gardener-external-admission-controller \
